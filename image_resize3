from PIL import Image

# Load the image
picture = Image.open("C:/Users/sohad/OneDrive/Desktop/Python/BacBon/room.jpg")

# Resize the image to 1000x1000 pixels
new_image = picture.resize((1000, 1000))

# Save the resized image
new_image.save("C:/Users/sohad/OneDrive/Desktop/Python/BacBon/New_image_of_room.jpg")

#FOR BETTER IMAGE QUALITY RESIZE WE USE THE IMAGE.BILINEAR FILTER
'''from PIL import Image

